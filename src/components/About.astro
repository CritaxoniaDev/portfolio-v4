---
// Import profile image
import profileImage from '../assets/pic.jpg';
// Import CSS module
import styles from "../styles/About.module.css";
---

<section id="about" class={styles.a1b2}>
  <div class={styles.c3d4}>
    <div class={styles.e5f6}>
      <!-- Section heading with animated underline -->
      <div class={styles.g7h8}>
        <span class={styles.i9j0}>Discover</span>
        <h2 class={styles.k1l2}>About Me</h2>
        <div class={styles.m3n4}></div>
      </div>
      
      <div class={styles.o5p6}>
        <!-- Left side: Content with 3D effect -->
        <div class={styles.q7r8}>
          <div class={styles.s9t0}>
            <!-- Main content card with 3D effect -->
            <div class={styles.u1v2}>
              <div class={styles.w3x4}>
                
                <!-- Profile image positioned at the top of the card -->
                <div class={styles.y5z6}>
                  <div class={styles.a7b8}>
                    <!-- Main image with enhanced 3D effect -->
                    <div class={styles.c9d0}>
                      <img 
                        src={profileImage.src}
                        alt="Gian Raphael Alcantara"
                        class={styles.e1f2}
                      />
                      <!-- Inner border glow effect -->
                      <div class={styles.g3h4}></div>
                    </div>
                    <!-- Subtle floating dots for dimension -->
                    <div class={styles.i5j6}></div>
                    <div class={styles.k7l8}></div>
                  </div>
                </div>
                
                <!-- Content with proper spacing to accommodate the image -->
                <div class={styles.m9n0}>
                  <p class={styles.o1p2}>
                    My name is <span class={styles.q3r4}>Gian Raphael Alcantara</span>, a dedicated software engineering student at First City Providential College. My mission revolves around mastering programming languages, algorithms, and software development methodologies.
                  </p>
                  
                  <p>
                    Fueled by a relentless passion for technology and innovation, I aspire to become a proficient software engineer capable of tackling complex problems and contributing to groundbreaking projects.
                  </p>
                  
                  <p>
                    My vision extends beyond mere academic excellence; I aim to leverage my skills to create impactful solutions that address real-world challenges, whether it's enhancing user experiences, optimizing system performance, or revolutionizing industries through cutting-edge software solutions.
                  </p>
                </div>
                
                <!-- Signature or personal touch -->
                <div class={styles.s5t6}>
                  <div class={styles.u7v8}>
                    <span class={styles.w9x0}>Gian Raphael</span>
                  </div>
                </div>
              </div>
              <!-- Inner border glow effect -->
              <div class={styles.y1z2}></div>
            </div>
            
            <!-- Layered decorative elements for 3D effect -->
            <div class={styles.a3b4}></div>
            <div class={styles.c5d6}></div>
            
            <!-- Corner accent -->
            <div class={styles.e7f8}></div>
            
            <!-- Subtle floating dots for dimension -->
            <div class={styles.g9h0}></div>
            <div class={styles.i1j2}></div>
          </div>
        </div>
        
        <!-- Right side: Values cards with 3D effect -->
        <div class={styles.k3l4}>
          <div class={styles.m5n6}>
            <!-- Innovation card -->
            <div class={styles.o7p8}>
              <div class={styles.q9r0}>
                <div class={styles.s1t2}>
                  <div class={styles.u3v4}>
                    <div class={styles.w5x6}>
                      <i class={`fas fa-lightbulb ${styles.y7z8}`}></i>
                    </div>
                    <div class={styles.a9b0}>
                      <h3 class={styles.c1d2}>Innovation</h3>
                      <p class={styles.e3f4}>Constantly seeking creative solutions to complex problems</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class={styles.g5h6}></div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class={styles.i7j8}></div>
              <div class={styles.k9l0}></div>
              
              <!-- Corner accent -->
              <div class={styles.m1n2}></div>
            </div>
            
            <!-- Craftsmanship card -->
            <div class={styles.o7p8}>
              <div class={styles.q9r0}>
                <div class={styles.s1t2}>
                  <div class={styles.u3v4}>
                    <div class={styles.w5x6}>
                      <i class={`fas fa-code ${styles.y7z8}`}></i>
                    </div>
                    <div class={styles.a9b0}>
                      <h3 class={styles.c1d2}>Craftsmanship</h3>
                      <p class={styles.e3f4}>Committed to writing clean, efficient, and maintainable code</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class={styles.g5h6}></div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class={styles.i7j8}></div>
              <div class={styles.k9l0}></div>
              
              <!-- Corner accent -->
              <div class={styles.m1n2}></div>
            </div>
            
            <!-- Collaboration card -->
            <div class={styles.o7p8}>
              <div class={styles.q9r0}>
                <div class={styles.s1t2}>
                  <div class={styles.u3v4}>
                    <div class={styles.w5x6}>
                      <i class={`fas fa-users ${styles.y7z8}`}></i>
                    </div>
                    <div class={styles.a9b0}>
                      <h3 class={styles.c1d2}>Collaboration</h3>
                      <p class={styles.e3f4}>Believing in the power of teamwork and knowledge sharing</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class={styles.g5h6}></div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class={styles.i7j8}></div>
              <div class={styles.k9l0}></div>
              
              <!-- Corner accent -->
              <div class={styles.m1n2}></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
