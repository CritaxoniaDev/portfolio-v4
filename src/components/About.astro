---
// Import profile image if needed
import profileImage from '../assets/pic.jpg'; // Optional: for a secondary profile image
---

<section id="about" class="py-32 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section heading with animated underline -->
      <div class="mb-16 text-center">
        <span class="text-blue-600 text-sm font-medium uppercase tracking-wider">Discover</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">About Me</h2>
        <div class="h-1 w-12 bg-blue-500 mx-auto mt-4 rounded-full"></div>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
        <!-- Left side: Content with 3D effect from Welcome component -->
        <div class="lg:col-span-7 space-y-6">
          <div class="relative">
            <!-- Main content card with 3D effect -->
            <div class="relative z-10 transform transition-transform duration-500 hover:-translate-y-1">
              <div class="bg-white p-8 rounded-lg shadow-xl relative"
                   style="box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.05) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;">
                
                <!-- Profile image positioned at the top of the card -->
                <div class="absolute -top-16 left-1/2 transform -translate-x-1/2 w-28 h-28 z-20">
                  <div class="relative">
                    <!-- Main image with enhanced 3D effect -->
                    <div class="relative z-10 transform transition-transform duration-500 hover:rotate-1">
                      <img 
                        src={profileImage.src}
                        alt="Gian Raphael Alcantara"
                        class="w-full h-full object-cover rounded-full shadow-xl"
                      />
                      <!-- Inner border glow effect -->
                      <div class="absolute inset-0 rounded-full border-2 border-blue-400 opacity-75 shadow-[0_0_15px_rgba(59,130,246,0.5)] animate-pulse">
                      </div>
                    </div>
                    <!-- Subtle floating dots for dimension -->
                    <div class="absolute -top-2 -left-2 w-4 h-4 rounded-full bg-blue-300 opacity-50"></div>
                    <div class="absolute top-10 -right-2 w-3 h-3 rounded-full bg-blue-100 opacity-70"></div>
                  </div>
                </div>
                
                <!-- Content with proper spacing to accommodate the image -->
                <div class="mt-14 space-y-6 text-gray-600 leading-relaxed text-lg">
                  <p class="relative pl-6 border-l-2 border-blue-100">
                    My name is <span class="font-medium text-gray-900">Gian Raphael Alcantara</span>, a dedicated software engineering student at First City Providential College. My mission revolves around mastering programming languages, algorithms, and software development methodologies.
                  </p>
                  
                  <p>
                    Fueled by a relentless passion for technology and innovation, I aspire to become a proficient software engineer capable of tackling complex problems and contributing to groundbreaking projects.
                  </p>
                  
                  <p>
                    My vision extends beyond mere academic excellence; I aim to leverage my skills to create impactful solutions that address real-world challenges, whether it's enhancing user experiences, optimizing system performance, or revolutionizing industries through cutting-edge software solutions.
                  </p>
                </div>
                
                <!-- Signature or personal touch -->
                <div class="pt-4 text-center">
                  <div class="inline-block border-t border-gray-200 pt-4 mt-2">
                    <span class="text-blue-600 font-medium">Gian Raphael</span>
                  </div>
                </div>
              </div>
              <!-- Inner border glow effect -->
              <div class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)]">
              </div>
            </div>
            
            <!-- Layered decorative elements for 3D effect -->
            <div class="absolute -bottom-3 -right-3 w-full h-full border-2 border-blue-500 rounded-lg z-0 bg-gradient-to-br from-blue-50 to-transparent">
            </div>
            <div class="absolute -bottom-5 -right-5 w-full h-full border border-blue-300 rounded-lg opacity-50">
            </div>
            
            <!-- Corner accent -->
            <div class="absolute -bottom-2 -right-2 w-12 h-12 bg-blue-500 rounded-br-lg rounded-tl-lg z-0 transform rotate-12 opacity-80">
            </div>
            
            <!-- Subtle floating dots for dimension -->
            <div class="absolute -top-4 -left-4 w-8 h-8 rounded-full bg-blue-100 opacity-70">
            </div>
            <div class="absolute top-20 -left-6 w-4 h-4 rounded-full bg-blue-300 opacity-50">
            </div>
          </div>
        </div>
        
        <!-- Right side: Values cards with 3D effect -->
        <div class="lg:col-span-5">
          <div class="space-y-6">
            <!-- Innovation card -->
            <div class="relative">
              <div class="relative z-10 transform transition-transform duration-500 hover:-translate-y-1 hover:rotate-1">
                <div class="bg-white p-6 rounded-lg shadow-lg relative">
                  <div class="flex items-center">
                    <div class="w-14 h-14 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 group-hover:bg-blue-500 group-hover:text-white transition-colors duration-300">
                      <i class="fas fa-lightbulb text-2xl"></i>
                    </div>
                    <div class="ml-5">
                      <h3 class="font-semibold text-gray-900 mb-2 text-lg">Innovation</h3>
                      <p class="text-gray-600">Constantly seeking creative solutions to complex problems</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)]">
                </div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class="absolute -bottom-2 -right-2 w-full h-full border-2 border-blue-500 rounded-lg z-0 bg-gradient-to-br from-blue-50 to-transparent">
              </div>
              <div class="absolute -bottom-4 -right-4 w-full h-full border border-blue-300 rounded-lg opacity-50">
              </div>
              
              <!-- Corner accent -->
              <div class="absolute -bottom-1 -right-1 w-8 h-8 bg-blue-500 rounded-br-lg rounded-tl-lg z-0 transform rotate-12 opacity-80">
              </div>
            </div>
            
            <!-- Craftsmanship card -->
            <div class="relative">
              <div class="relative z-10 transform transition-transform duration-500 hover:-translate-y-1 hover:rotate-1">
                <div class="bg-white p-6 rounded-lg shadow-lg relative">
                  <div class="flex items-center">
                    <div class="w-14 h-14 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 group-hover:bg-blue-500 group-hover:text-white transition-colors duration-300">
                      <i class="fas fa-code text-2xl"></i>
                    </div>
                    <div class="ml-5">
                      <h3 class="font-semibold text-gray-900 mb-2 text-lg">Craftsmanship</h3>
                      <p class="text-gray-600">Committed to writing clean, efficient, and maintainable code</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)]">
                </div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class="absolute -bottom-2 -right-2 w-full h-full border-2 border-blue-500 rounded-lg z-0 bg-gradient-to-br from-blue-50 to-transparent">
              </div>
              <div class="absolute -bottom-4 -right-4 w-full h-full border border-blue-300 rounded-lg opacity-50">
              </div>
              
              <!-- Corner accent -->
              <div class="absolute -bottom-1 -right-1 w-8 h-8 bg-blue-500 rounded-br-lg rounded-tl-lg z-0 transform rotate-12 opacity-80">
              </div>
            </div>
            
            <!-- Collaboration card -->
            <div class="relative">
              <div class="relative z-10 transform transition-transform duration-500 hover:-translate-y-1 hover:rotate-1">
                <div class="bg-white p-6 rounded-lg shadow-lg relative">
                  <div class="flex items-center">
                    <div class="w-14 h-14 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 group-hover:bg-blue-500 group-hover:text-white transition-colors duration-300">
                      <i class="fas fa-users text-2xl"></i>
                    </div>
                    <div class="ml-5">
                      <h3 class="font-semibold text-gray-900 mb-2 text-lg">Collaboration</h3>
                      <p class="text-gray-600">Believing in the power of teamwork and knowledge sharing</p>
                    </div>
                  </div>
                </div>
                <!-- Inner border glow effect -->
                <div class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)]">
                </div>
              </div>
              
              <!-- Layered decorative elements for 3D effect -->
              <div class="absolute -bottom-2 -right-2 w-full h-full border-2 border-blue-500 rounded-lg z-0 bg-gradient-to-br from-blue-50 to-transparent">
              </div>
              <div class="absolute -bottom-4 -right-4 w-full h-full border border-blue-300 rounded-lg opacity-50">
              </div>
              
              <!-- Corner accent -->
              <div class="absolute -bottom-1 -right-1 w-8 h-8 bg-blue-500 rounded-br-lg rounded-tl-lg z-0 transform rotate-12 opacity-80">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
