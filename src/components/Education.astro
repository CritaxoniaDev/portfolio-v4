---
// Import school logos
import lithanLogo from '../assets/res/lithan.png';
import fcpcLogo from '../assets/res/fcpc.png';
import spnhsLogo from '../assets/res/spnhs.png';
// Import CSS module
import styles from "../styles/Education.module.css";

// Education data
const educationData = [
  {
    school: "Lithan Educlaas",
    degree: "Applied Degree in Software Engineering",
    date: "2023 - Present",
    address: "Eunos Road 8 #07-02 Lifelong Learning Institute Singapore 408601",
    status: { color: "yellow", text: "In Progress" },
    logo: lithanLogo
  },
  {
    school: "First City Providential College",
    degree: "Bachelor of Science in Information Technology - Software Engineering",
    date: "2023 - Present",
    address: "Blk 7 Phase F Francisco Homes, Narra, San Jose del Monte City, 3023 Bulacan",
    status: { color: "yellow", text: "In Progress" },
    logo: fcpcLogo
  },
  {
    school: "Sapang Palay National High School",
    degree: "Senior High School",
    date: "2021 - 2022",
    address: "152 Kapiwa St, San Jose del Monte City, Bulacan",
    status: { color: "yellow", text: "With Honors" },
    logo: spnhsLogo
  }
];
---

<section id="education" class={styles.a1b2}>
  <div class={styles.c3d4}>
    <div class={styles.e5f6}>
      <!-- Section heading with animated underline -->
      <div class={styles.g7h8}>
        <span class={styles.i9j0}>Learning</span>
        <h2 class={styles.k1l2}>Education</h2>
        <div class={styles.m3n4}></div>
      </div>
      
      <!-- Alternating Timeline -->
      <div class={styles.o5p6}>
        <!-- Central timeline connector with gradient -->
        <div class={styles.q7r8}></div>
        
        {educationData.map((item, index) => (
          <div class={styles.s9t0}>
            <!-- Timeline dot with glow effect -->
            <div class={styles.u1v2}></div>
            
            <!-- Card container with 3D effect - alternating sides -->
            <div class={index % 2 === 0 ? styles.w3x4 : styles.y5z6}>
              <div class={styles.a7b8}>
                <!-- Main card with 3D effect -->
                <div class={styles.c9d0}>
                  <div class={styles.e1f2}>
                    
                    <!-- Logo positioned at the top of the card with 3D effect -->
                    <div class={styles.g3h4}>
                      <div class={styles.i5j6}>
                        <!-- Main logo with enhanced 3D effect -->
                        <div class={styles.k7l8}>
                          <div class={styles.m9n0}>
                            <img
                              src={item.logo.src}
                              alt={item.school}
                              class={styles.o1p2}
                            />
                          </div>
                          <!-- Inner border glow effect -->
                          <div class={styles.q3r4}></div>
                        </div>
                        <!-- Subtle floating dots for dimension -->
                        <div class={styles.s5t6}></div>
                        <div class={styles.u7v8}></div>
                      </div>
                    </div>
                    
                    <!-- Content with proper spacing to accommodate the logo -->
                    <div class={styles.w9x0}>
                      <h3 class={styles.y1z2}>{item.school}</h3>
                      <h4 class={styles.a3b4}>{item.degree}</h4>
                      
                      <!-- Status badge with enhanced styling -->
                      <div class={styles.c5d6}>
                        {item.status.text}
                      </div>
                    </div>
                    
                    <div class={styles.e7f8}>
                      <i class={`fas fa-calendar-alt ${styles.g9h0}`}></i>
                      <span>{item.date}</span>
                    </div>
                    
                    <div class={styles.i1j2}>
                      <i class={`fas fa-map-marker-alt ${styles.k3l4}`}></i>
                      <span class={styles.m5n6}>{item.address}</span>
                    </div>
                  </div>
                  <!-- Inner border glow effect -->
                  <div class={styles.o7p8}></div>
                </div>
                
                <!-- Layered decorative elements for 3D effect -->
                <div class={styles.q9r0}></div>
                <div class={styles.s1t2}></div>
                
                <!-- Corner accent - alternating sides based on card position -->
                <div class={index % 2 === 0 ? styles.u3v4 : styles.w5x6}></div>
                
                <!-- Subtle floating dots for dimension - alternating sides -->
                <div class={index % 2 === 0 ? styles.a9b0 : styles.y7z8}></div>
                <div class={index % 2 === 0 ? styles.e3f4 : styles.c1d2}></div>
              </div>
            </div>
          </div>
        ))}
      </div>      
    </div>
  </div>
</section>
