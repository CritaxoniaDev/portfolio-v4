---
// Import school logos
import lithanLogo from '../assets/res/lithan.png';
import fcpcLogo from '../assets/res/fcpc.png';
import spnhsLogo from '../assets/res/spnhs.png';

// Education data
const educationData = [
  {
    school: "Lithan Educlaas",
    degree: "Applied Degree in Software Engineering",
    date: "2023 - Present",
    address: "Eunos Road 8 #07-02 Lifelong Learning Institute Singapore 408601",
    status: { color: "yellow", text: "In Progress" },
    logo: lithanLogo
  },
  {
    school: "First City Providential College",
    degree: "Bachelor of Science in Information Technology - Software Engineering",
    date: "2023 - Present",
    address: "Blk 7 Phase F Francisco Homes, Narra, San Jose del Monte City, 3023 Bulacan",
    status: { color: "yellow", text: "In Progress" },
    logo: fcpcLogo
  },
  {
    school: "Sapang Palay National High School",
    degree: "Senior High School",
    date: "2021 - 2022",
    address: "152 Kapiwa St, San Jose del Monte City, Bulacan",
    status: { color: "yellow", text: "With Honors" },
    logo: spnhsLogo
  }
];
---

<section id="education" class="py-32 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section heading with animated underline -->
      <div class="mb-16 text-center">
        <span class="text-blue-600 text-sm font-medium uppercase tracking-wider">Learning</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Education</h2>
        <div class="h-1 w-12 bg-blue-500 mx-auto mt-4 rounded-full"></div>
      </div>
      
      <!-- Alternating Timeline -->
      <div class="relative">
        <!-- Central timeline connector -->
        <div class="hidden md:block absolute top-0 left-1/2 bottom-0 w-px bg-gradient-to-b from-blue-200 via-blue-300 to-transparent"></div>
        
        {educationData.map((item, index) => (
          <div class={`relative mb-16 ${index === educationData.length - 1 ? 'mb-0' : ''}`}>
            <!-- Timeline dot -->
            <div class="hidden md:block absolute top-12 left-1/2 w-4 h-4 rounded-full border-2 border-blue-400 bg-white transform -translate-x-1/2 z-10"></div>
            
            <!-- Card container - now a single bordered element -->
            <div class={`flex flex-col ${index % 2 === 0 ? 'md:ml-auto md:mr-8' : 'md:mr-auto md:ml-8'} md:w-5/12`}>
              <div class="bg-white border-2 border-gray-200 p-6 hover:border-blue-200 transition-colors duration-300 shadow-sm hover:shadow relative">
                <!-- Logo positioned at the top of the card -->
                <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 w-20 h-20 bg-white border border-gray-200 rounded-lg p-2 flex items-center justify-center shadow-sm z-20">
                  <img 
                    src={item.logo.src}
                    alt={item.school}
                    class="max-w-full max-h-full object-contain"
                  />
                </div>
                
                <!-- Content with proper spacing to accommodate the logo -->
                <div class="mt-12 text-center mb-4">
                  <h3 class="text-xl font-semibold text-gray-900">{item.school}</h3>
                  <h4 class="text-blue-600 font-medium mb-2">{item.degree}</h4>
                  
                  <!-- Status badge -->
                  <div class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full font-medium mb-4">
                    {item.status.text}
                  </div>
                </div>
                
                <div class="flex items-center text-sm text-gray-500 mb-3 justify-center">
                  <i class="fas fa-calendar-alt mr-2 text-blue-400"></i>
                  <span>{item.date}</span>
                </div>
                
                <div class="flex items-start text-sm text-gray-500 text-center">
                  <i class="fas fa-map-marker-alt mt-1 mr-2 text-blue-400 flex-shrink-0"></i>
                  <span class="leading-relaxed">{item.address}</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>      
    </div>
  </div>
</section>
