---
// Import any icons or assets you might need
import {
    FaEnvelope,
    FaPhone,
    FaMapMarkerAlt,
    FaGithub,
    FaLinkedin,
} from "react-icons/fa";

// Contact information
const contactInfo = {
    email: "raphaelalcantara51@gmail.com",
    phone: "+63 945 123 4567",
    location: "San Jose Del Monte, Bulacan, Philippines",
    github: "https://github.com/CritaxoniaDev",
    linkedin: "https://linkedin.com/in/gian-raphael-alcantara",
};
---

<section id="contact" class="py-32 bg-white">
    <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
            <!-- Section heading with animated underline -->
            <div class="mb-16 text-center">
                <span
                    class="text-blue-600 text-sm font-medium uppercase tracking-wider"
                    >Get in Touch</span
                >
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">
                    Contact Me
                </h2>
                <div class="h-1 w-12 bg-blue-500 mx-auto mt-4 rounded-full">
                </div>
                <p class="text-gray-600 mt-6 max-w-2xl mx-auto">
                    Have a project in mind or want to discuss potential
                    opportunities? I'd love to hear from you.
                </p>
            </div>

            <!-- Contact content with 3D card effect -->
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
                <!-- Left side: Contact form -->
                <div class="lg:col-span-7">
                    <div class="relative">
                        <!-- Layered decorative elements for 3D effect - MOVED BELOW to ensure they don't interfere with inputs -->
                        <div
                            class="absolute -bottom-3 -right-3 w-full h-full border-2 border-blue-500 rounded-lg bg-gradient-to-br from-blue-50 to-transparent pointer-events-none"
                        >
                        </div>
                        <div
                            class="absolute -bottom-5 -right-5 w-full h-full border border-blue-300 rounded-lg opacity-50 pointer-events-none"
                        >
                        </div>

                        <!-- Corner accent - with pointer-events-none -->
                        <div
                            class="absolute -bottom-2 -left-2 w-10 h-10 bg-blue-500 rounded-bl-lg rounded-tr-lg transform rotate-12 opacity-80 pointer-events-none"
                        >
                        </div>

                        <!-- Subtle floating dots for dimension - with pointer-events-none -->
                        <div
                            class="absolute -top-4 -right-4 w-6 h-6 rounded-full bg-blue-100 opacity-70 pointer-events-none"
                        >
                        </div>
                        <div
                            class="absolute top-20 -right-6 w-3 h-3 rounded-full bg-blue-300 opacity-50 pointer-events-none"
                        >
                        </div>

                        <!-- Main card with 3D effect -->
                        <div
                            class="relative z-10 transform transition-transform duration-500"
                        >
                            <div
                                class="bg-white p-8 rounded-lg shadow-xl relative"
                                style="box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.05) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;"
                            >
                                <h3
                                    class="text-xl font-semibold text-gray-900 mb-6"
                                >
                                    Send Me a Message
                                </h3>

                                <!-- Contact form -->
                                <form id="contact-form" class="space-y-6">
                                    <!-- Name input -->
                                    <div>
                                        <label
                                            for="name"
                                            class="block text-sm font-medium text-gray-700 mb-1"
                                            >Your Name</label
                                        >
                                        <input
                                            type="text"
                                            id="name"
                                            name="name"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition-colors duration-300"
                                            placeholder="John Doe"
                                            required
                                        />
                                    </div>

                                    <!-- Email input -->
                                    <div>
                                        <label
                                            for="email"
                                            class="block text-sm font-medium text-gray-700 mb-1"
                                            >Your Email</label
                                        >
                                        <input
                                            type="email"
                                            id="email"
                                            name="email"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition-colors duration-300"
                                            placeholder="john@example.com"
                                            required
                                        />
                                    </div>

                                    <!-- Subject input -->
                                    <div>
                                        <label
                                            for="subject"
                                            class="block text-sm font-medium text-gray-700 mb-1"
                                            >Subject</label
                                        >
                                        <input
                                            type="text"
                                            id="subject"
                                            name="subject"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition-colors duration-300"
                                            placeholder="Project Inquiry"
                                            required
                                        />
                                    </div>

                                    <!-- Message textarea -->
                                    <div>
                                        <label
                                            for="message"
                                            class="block text-sm font-medium text-gray-700 mb-1"
                                            >Your Message</label
                                        >
                                        <textarea
                                            id="message"
                                            name="message"
                                            rows="5"
                                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition-colors duration-300"
                                            placeholder="Hello, I'd like to discuss a potential project..."
                                            required></textarea>
                                    </div>

                                    <!-- Submit button with enhanced styling -->
                                    <div>
                                        <button
                                            type="submit"
                                            class="w-full px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300 transform hover:-translate-y-1 hover:shadow-lg"
                                        >
                                            Send Message
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <!-- Inner border glow effect - with pointer-events-none -->
                            <div
                                class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)] pointer-events-none"
                            >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right side: Contact information -->
                <div class="lg:col-span-5">
                    <div class="space-y-8">
                        <!-- Contact info card with 3D effect -->
                        <div class="relative">
                            <!-- Layered decorative elements - with pointer-events-none -->
                            <div
                                class="absolute -bottom-3 -right-3 w-full h-full border-2 border-blue-500 rounded-lg bg-gradient-to-br from-blue-50 to-transparent pointer-events-none"
                            >
                            </div>
                            <div
                                class="absolute -bottom-5 -right-5 w-full h-full border border-blue-300 rounded-lg opacity-50 pointer-events-none"
                            >
                            </div>

                            <!-- Corner accent - with pointer-events-none -->
                            <div
                                class="absolute -bottom-2 -right-2 w-10 h-10 bg-blue-500 rounded-br-lg rounded-tl-lg transform rotate-12 opacity-80 pointer-events-none"
                            >
                            </div>

                            <!-- Main card with 3D effect -->
                            <div
                                class="relative z-10 transform transition-transform duration-500 hover:-translate-y-2 hover:rotate-1"
                            >
                                <div
                                    class="bg-white p-8 rounded-lg shadow-xl relative"
                                    style="box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.05) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;"
                                >
                                    <h3
                                        class="text-xl font-semibold text-gray-900 mb-6"
                                    >
                                        Contact Information
                                    </h3>

                                    <!-- Contact details with icons -->
                                    <div class="space-y-5">
                                        <div class="flex items-start">
                                            <div
                                                class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 mr-4 flex-shrink-0"
                                            >
                                                <FaEnvelope
                                                    className="text-lg"
                                                />
                                            </div>
                                            <div>
                                                <h4
                                                    class="text-sm font-medium text-gray-500 mb-1"
                                                >
                                                    Email
                                                </h4>
                                                <a
                                                    href={`mailto:${contactInfo.email}`}
                                                    class="text-gray-800 hover:text-blue-600 transition-colors duration-300"
                                                >
                                                    {contactInfo.email}
                                                </a>
                                            </div>
                                        </div>

                                        <div class="flex items-start">
                                            <div
                                                class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 mr-4 flex-shrink-0"
                                            >
                                                <FaPhone className="text-lg" />
                                            </div>
                                            <div>
                                                <h4
                                                    class="text-sm font-medium text-gray-500 mb-1"
                                                >
                                                    Phone
                                                </h4>
                                                <a
                                                    href={`tel:${contactInfo.phone.replace(/\s+/g, "")}`}
                                                    class="text-gray-800 hover:text-blue-600 transition-colors duration-300"
                                                >
                                                    {contactInfo.phone}
                                                </a>
                                            </div>
                                        </div>

                                        <div class="flex items-start">
                                            <div
                                                class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center text-blue-500 mr-4 flex-shrink-0"
                                            >
                                                <FaMapMarkerAlt
                                                    className="text-lg"
                                                />
                                            </div>
                                            <div>
                                                <h4
                                                    class="text-sm font-medium text-gray-500 mb-1"
                                                >
                                                    Location
                                                </h4>
                                                <p class="text-gray-800">
                                                    {contactInfo.location}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Inner border glow effect - with pointer-events-none -->
                                <div
                                    class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)] pointer-events-none"
                                >
                                </div>
                            </div>
                        </div>

                        <!-- Social links card with 3D effect -->
                        <div class="relative">
                            <!-- Layered decorative elements - with pointer-events-none -->
                            <div
                                class="absolute -bottom-3 -right-3 w-full h-full border-2 border-blue-500 rounded-lg bg-gradient-to-br from-blue-50 to-transparent pointer-events-none"
                            >
                            </div>
                            <div
                                class="absolute -bottom-5 -right-5 w-full h-full border border-blue-300 rounded-lg opacity-50 pointer-events-none"
                            >
                            </div>

                            <!-- Corner accent - with pointer-events-none -->
                            <div
                                class="absolute -bottom-2 -left-2 w-10 h-10 bg-blue-500 rounded-bl-lg rounded-tr-lg transform rotate-12 opacity-80 pointer-events-none"
                            >
                            </div>

                            <!-- Subtle floating dots for dimension - with pointer-events-none -->
                            <div
                                class="absolute -top-4 -left-4 w-6 h-6 rounded-full bg-blue-100 opacity-70 pointer-events-none"
                            >
                            </div>
                            <div
                                class="absolute top-20 -left-6 w-3 h-3 rounded-full bg-blue-300 opacity-50 pointer-events-none"
                            >
                            </div>

                            <!-- Main card with 3D effect -->
                            <div
                                class="relative z-10 transform transition-transform duration-500 hover:-translate-y-2 hover:rotate-1"
                            >
                                <div
                                    class="bg-white p-8 rounded-lg shadow-xl relative"
                                    style="box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.05) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;"
                                >
                                    <h3
                                        class="text-xl font-semibold text-gray-900 mb-6"
                                    >
                                        Connect With Me
                                    </h3>

                                    <!-- Social media links -->
                                    <div class="flex space-x-4">
                                        <a
                                            href={contactInfo.github}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center text-gray-700 hover:bg-blue-500 hover:text-white transition-colors duration-300 transform hover:scale-110"
                                        >
                                            <FaGithub className="text-xl" />
                                        </a>

                                        <a
                                            href={contactInfo.linkedin}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center text-gray-700 hover:bg-blue-500 hover:text-white transition-colors duration-300 transform hover:scale-110"
                                        >
                                            <FaLinkedin className="text-xl" />
                                        </a>
                                    </div>
                                </div>
                                <!-- Inner border glow effect - with pointer-events-none -->
                                <div
                                    class="absolute inset-0 rounded-lg border-2 border-blue-400 opacity-30 shadow-[0_0_15px_rgba(59,130,246,0.3)] pointer-events-none"
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Success message (hidden by default) -->
            <div id="success-message" class="hidden mt-8">
                <div class="relative">
                    <!-- Main card with 3D effect -->
                    <div class="relative z-10">
                        <div
                            class="bg-green-50 p-6 rounded-lg shadow-md border border-green-200 text-center"
                        >
                            <div
                                class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center text-green-500 mx-auto mb-4"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <h3
                                class="text-xl font-semibold text-gray-900 mb-2"
                            >
                                Message Sent!
                            </h3>
                            <p class="text-gray-600">
                                Thank you for reaching out. I'll get back to you
                                as soon as possible.
                            </p>
                        </div>
                    </div>

                    <!-- Subtle glow effect -->
                    <div
                        class="absolute inset-0 rounded-lg border-2 border-green-400 opacity-30 shadow-[0_0_15px_rgba(74,222,128,0.3)] pointer-events-none"
                    >
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("contact-form") as HTMLFormElement;
        const successMessage = document.getElementById("success-message");

        if (form) {
            form.addEventListener("submit", function (e) {
                e.preventDefault();

                // Get form data
                const formData = new FormData(form);
                const formDataObj = Object.fromEntries(formData.entries());

                // Here you would typically send the data to your backend or email service
                // For demonstration, we'll just simulate a successful submission

                // Simulate form submission with a delay
                setTimeout(() => {
                    // Hide the form
                    const formContainer = form.closest(".relative.z-10");
                    if (formContainer) {
                        formContainer.classList.add("hidden");
                    }

                    // Show success message
                    if (successMessage) {
                        successMessage.classList.remove("hidden");
                    }

                    // Reset form after submission
                    form.reset();

                    // Optional: Hide success message and show form again after some time
                    setTimeout(() => {
                        if (successMessage) {
                            successMessage.classList.add("hidden");
                        }
                        const formContainer = form.closest(".relative.z-10");
                        if (formContainer) {
                            formContainer.classList.remove("hidden");
                        }
                    }, 5000);
                }, 1000);

                // In a real implementation, you would use fetch or axios to send the data
                // Example:
                /*
                fetch('/api/contact', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify(formDataObj),
                })
                .then(response => response.json())
                .then(data => {
                  // Handle success
                  const formContainer = form.closest('.relative.z-10');
                  if (formContainer) {
                    formContainer.classList.add('hidden');
                  }
                  if (successMessage) {
                    successMessage.classList.remove('hidden');
                  }
                  form.reset();
                })
                .catch(error => {
                  // Handle error
                  console.error('Error:', error);
                });
                */
            });
        }

        // Add focus and blur event listeners to inputs for enhanced styling
        const inputs = document.querySelectorAll("input, textarea");
        inputs.forEach((input) => {
            // Add focus styling
            input.addEventListener("focus", () => {
                input.classList.add(
                    "ring-2",
                    "ring-blue-300",
                    "border-blue-400",
                );
            });

            // Remove focus styling
            input.addEventListener("blur", () => {
                input.classList.remove(
                    "ring-2",
                    "ring-blue-300",
                    "border-blue-400",
                );
            });
        });
    });
</script>
