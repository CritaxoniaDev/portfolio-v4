---
// Import React icons
import {
    FaHtml5,
    FaCss3Alt,
    FaBootstrap,
    FaJs,
    FaJsSquare,
    FaWind,
    FaReact,
    FaJava,
    FaLeaf,
    FaDatabase,
    FaLifeRing,
    FaPhp,
    FaLaravel,
    FaServer,
    FaCat,
    FaPencilRuler,
    FaFigma,
} from "react-icons/fa";
import { SiNextdotjs, SiFirebase } from "react-icons/si";
// Import CSS module
import styles from "../styles/Skills.module.css";

const skills = [
    {
        name: "HTML",
        icon: FaHtml5,
        category: "frontend",
        color: "text-red-500",
    },
    {
        name: "CSS",
        icon: FaCss3Alt,
        category: "frontend",
        color: "text-blue-500",
    },
    {
        name: "Bootstrap",
        icon: FaBootstrap,
        category: "frontend",
        color: "text-purple-500",
    },
    {
        name: "JavaScript",
        icon: FaJs,
        category: "frontend",
        color: "text-yellow-400",
    },
    {
        name: "jQuery",
        icon: FaJsSquare,
        category: "frontend",
        color: "text-blue-400",
    },
    {
        name: "Tailwind",
        icon: FaWind,
        category: "frontend",
        color: "text-teal-500",
    },
    {
        name: "React",
        icon: FaReact,
        category: "frontend",
        color: "text-blue-400",
    },
    { name: "Java", icon: FaJava, category: "backend", color: "text-red-500" },
    {
        name: "Spring Boot",
        icon: FaLeaf,
        category: "backend",
        color: "text-green-500",
    },
    {
        name: "MySQL",
        icon: FaDatabase,
        category: "backend",
        color: "text-blue-600",
    },
    {
        name: "Liferay",
        icon: FaLifeRing,
        category: "backend",
        color: "text-blue-500",
    },
    { name: "PHP", icon: FaPhp, category: "backend", color: "text-purple-600" },
    {
        name: "Laravel",
        icon: FaLaravel,
        category: "backend",
        color: "text-red-600",
    },
    {
        name: "Firebase",
        icon: SiFirebase,
        category: "backend",
        color: "text-yellow-500",
    },
    {
        name: "Axure RP",
        icon: FaPencilRuler,
        category: "uiux",
        color: "text-gray-600",
    },
    {
        name: "Figma",
        icon: FaFigma,
        category: "uiux",
        color: "text-purple-500",
    },
];

// Group skills by category
const categories = {
    frontend: {
        title: "Frontend Development",
        skills: skills.filter((skill) => skill.category === "frontend"),
    },
    backend: {
        title: "Backend Development",
        skills: skills.filter((skill) => skill.category === "backend"),
    },
    uiux: {
        title: "UI/UX Design",
        skills: skills.filter((skill) => skill.category === "uiux"),
    },
};
---

<section id="skills" class={styles.a1b2}>
    <div class={styles.c3d4}>
        <div class={styles.e5f6}>
            <!-- Section heading with animated underline -->
            <div class={styles.g7h8}>
                <span class={styles.i9j0}>Expertise</span>
                <h2 class={styles.k1l2}>Technical Skills</h2>
                <div class={styles.m3n4}></div>
            </div>

            <!-- Skills Categories with 3D effect -->
            <div class={styles.o5p6}>
                {
                    Object.entries(categories).map(([key, category], categoryIndex) => (
                        <div class={styles.q7r8}>
                            <!-- Category heading with 3D accent -->
                            <div class={styles.s9t0}>
                                <h3 class={styles.u1v2}>
                                    <span class={styles.w3x4} />
                                    {category.title}
                                </h3>
                                <div class={styles.y5z6}></div>
                                
                                <!-- Decorative element -->
                                <div class={categoryIndex % 2 === 0 ? styles.a7b8 : styles.c9d0}></div>
                            </div>

<!-- Skills grid with 3D cards -->
<div class={styles.e1f2}>
    {category.skills.map((skill, index) => (
        <div class={styles.g3h4}>
            <!-- Main skill card with 3D effect -->
            <div class={styles.i5j6}>
                <div class={styles.k7l8}>
                    <div class={`${styles.m9n0} ${skill.color}`}>
                        <skill.icon />
                    </div>
                    <span class={styles.o1p2}>
                        {skill.name}
                    </span>
                    
                    <!-- Subtle glow effect on hover -->
                    <div class={styles.q3r4}></div>
                </div>
                <!-- Inner border glow effect -->
                <div class={styles.s5t6}></div>
            </div>
            
            <!-- Layered decorative elements for 3D effect - smaller for skill cards -->
            <div class={styles.u7v8}></div>
            
            <!-- Subtle floating dot for dimension - only on some cards for visual interest -->
            {index % 3 === 0 && (
                <div class={styles.w9x0}></div>
            )}
        </div>
    ))}
</div>
</div>
))
}
</div>
</section>
