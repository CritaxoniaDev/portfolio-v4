---
// Import the logo from assets
import educlaasLogo from '../assets/res/educlaas-logo.png';
// Import CSS module
import styles from "../styles/Experience.module.css";
---

<section id="experience" class={styles.a1b2}>
  <div class={styles.c3d4}>
    <div class={styles.e5f6}>
      <!-- Section heading with animated underline -->
      <div class={styles.g7h8}>
        <span class={styles.i9j0}>Career</span>
        <h2 class={styles.k1l2}>Experience</h2>
        <div class={styles.m3n4}></div>
      </div>
      
      <!-- Minimalist Timeline -->
      <div class={styles.o5p6}>
        <!-- Timeline connector line with gradient -->
        <div class={styles.q7r8}></div>
        
        <!-- Experience Item -->
        <div class={styles.s9t0}>
          <!-- Timeline dot with improved styling -->
          <div class={styles.u1v2}></div>
          
          <div class={styles.w3x4}>
            <!-- Left side: Logo and period with 3D effect styling -->
            <div class={styles.y5z6}>
              <!-- Logo container with 3D effect -->
              <div class={styles.a7b8}>
                <!-- Main logo with enhanced 3D effect -->
                <div class={styles.c9d0}>
                  <div class={styles.e1f2}>
                    <img 
                      src={educlaasLogo.src}
                      alt="Lithan EduClaaS"
                      class={styles.g3h4}
                    />
                  </div>
                  <!-- Inner border glow effect -->
                  <div class={styles.i5j6}></div>
                </div>
                <!-- Layered decorative elements for 3D effect -->
                <div class={styles.k7l8}></div>
                <div class={styles.m9n0}></div>
                <!-- Corner accent -->
                <div class={styles.o1p2}></div>
              </div>
              <div class={styles.q3r4}>Nov 2024 - Present</div>
            </div>
            
            <!-- Right side: Content with 3D card styling -->
            <div class={styles.s5t6}>
              <div class={styles.u7v8}>
                <!-- Main content card with 3D effect -->
                <div class={styles.w9x0}>
                  <div class={styles.y1z2}>
                    
                    <!-- Job title and company -->
                    <div class={styles.a3b4}>
                      <h3 class={styles.c5d6}>Technology Associate</h3>
                      <h4 class={styles.e7f8}>Lithan EduClaaS</h4>
                      
                      <!-- Status badge -->
                      <div class={styles.g9h0}>
                        Current Position
                      </div>
                    </div>
                    
                    <!-- Responsibilities with improved bullets -->
                    <ul class={styles.i1j2}>
                      <li class={styles.k3l4}>
                        <span class={styles.m5n6}>•</span>
                        <span class={styles.o7p8}>Webhosting and web server management</span>
                      </li>
                      <li class={styles.k3l4}>
                        <span class={styles.m5n6}>•</span>
                        <span class={styles.o7p8}>Hands-on experience in LMS platform technical administration</span>
                      </li>
                      <li class={styles.k3l4}>
                        <span class={styles.m5n6}>•</span>
                        <span class={styles.o7p8}>Any other tasks related to the business unit</span>
                      </li>
                    </ul>
                    
                    <!-- Technologies with improved styling -->
                    <div class={styles.q9r0}>
                      <h5 class={styles.s1t2}>Technologies Used</h5>
                      <div class={styles.u3v4}>
                        <span class={styles.w5x6}>Laravel</span>
                        <span class={styles.w5x6}>PHP</span>
                        <span class={styles.w5x6}>MySQL</span>
                        <span class={styles.w5x6}>OpenAI API</span>
                      </div>
                    </div>
                  </div>
                  <!-- Inner border glow effect -->
                  <div class={styles.y7z8}></div>
                </div>
                
                <!-- Layered decorative elements for 3D effect -->
                <div class={styles.a9b0}></div>
                <div class={styles.c1d2}></div>
                
                <!-- Corner accent -->
                <div class={styles.e3f4}></div>
                
                <!-- Subtle floating dots for dimension -->
                <div class={styles.g5h6}></div>
                <div class={styles.i7j8}></div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- You can add more experience items here following the same pattern -->
        
      </div>
    </div>
  </div>
</section>
