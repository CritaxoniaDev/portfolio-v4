---
// Import the logo from assets
import educlaasLogo from '../assets/res/educlaas-logo.png';
// Import any icons if needed
---

<section id="experience" class="py-32 mb-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section heading with animated underline -->
      <div class="mb-16 text-center">
        <span class="text-blue-600 text-sm font-medium uppercase tracking-wider">Career</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Experience</h2>
        <div class="h-1 w-12 bg-blue-500 mx-auto mt-4 rounded-full"></div>
      </div>
      
      <!-- Minimalist Timeline -->
      <div class="relative">
        <!-- Timeline connector line -->
        <div class="hidden md:block absolute top-0 left-16 bottom-0 w-px bg-gray-200"></div>
        
        <!-- Experience Item -->
        <div class="relative mb-12">
          <!-- Timeline dot -->
          <div class="hidden md:block absolute top-8 left-16 w-3 h-3 rounded-full bg-blue-500 transform -translate-x-1/2"></div>
          
          <div class="flex flex-col md:flex-row gap-8">
            <!-- Left side: Logo and period -->
            <div class="md:w-32 flex flex-col items-center md:items-end">
              <div class="w-16 h-16 bg-white border border-gray-200 rounded-lg p-2 flex items-center justify-center shadow-sm">
                <img 
                  src={educlaasLogo.src}
                  alt="Lithan EduClaaS"
                  class="max-w-full max-h-full object-contain"
                />
              </div>
              <div class="text-sm text-gray-500 mt-3 md:text-right">Nov 2024 - Present</div>
            </div>
            
            <!-- Right side: Content -->
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-gray-900">Technology Associate</h3>
              <h4 class="text-blue-600 font-medium mb-5">Lithan EduClaaS</h4>
              
              <ul class="space-y-3 mb-7">
                <li class="flex items-start">
                  <span class="text-blue-500 mr-3">•</span>
                  <span class="text-gray-600">Webhosting and web server management</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-500 mr-3">•</span>
                  <span class="text-gray-600">Hands-on experience in LMS platform technical administration</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-500 mr-3">•</span>
                  <span class="text-gray-600">Any other tasks related to the business unit</span>
                </li>
              </ul>
              
              <div class="border-t border-gray-100 pt-5">
                <h5 class="text-sm font-medium text-gray-700 mb-3">Technologies Used</h5>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1.5 bg-gray-50 text-gray-700 text-xs rounded-full">Laravel</span>
                  <span class="px-3 py-1.5 bg-gray-50 text-gray-700 text-xs rounded-full">PHP</span>
                  <span class="px-3 py-1.5 bg-gray-50 text-gray-700 text-xs rounded-full">MySQL</span>
                  <span class="px-3 py-1.5 bg-gray-50 text-gray-700 text-xs rounded-full">OpenAI API</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
